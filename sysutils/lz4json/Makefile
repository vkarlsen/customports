# $FreeBSD$

PORTNAME=	lz4json
PORTVERSION=	g20160401
CATEGORIES=	sysutils

MAINTAINER=	vidar@karlsen.tech
COMMENT=	Unpack lz4json files as generated by Firefox book mark backups

LICENSE=	BSD2CLAUSE

LIB_DEPENDS=	liblz4.so:archivers/liblz4

USE_GITHUB=	yes
GH_ACCOUNT=	andikleen
GH_TAGNAME=	e3e6365

post-patch:
	@${REINPLACE_CMD} -e 's|include "lz4.h"|include "${PREFIX}/include/lz4.h"|' ${WRKSRC}/lz4jsoncat.c

do-build:
	cd ${WRKSRC} && make

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/lz4jsoncat ${STAGEDIR}${PREFIX}/bin/lz4jsoncat

.include <bsd.port.mk>
