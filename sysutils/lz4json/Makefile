PORTNAME=	lz4json
PORTVERSION=	g20171014
CATEGORIES=	sysutils

MAINTAINER=	vidar@karlsen.tech
COMMENT=	Unpack lz4json files as generated by Firefox book mark backups

LICENSE=	BSD2CLAUSE

BUILD_DEPENDS=	pkg-config:devel/pkgconf
LIB_DEPENDS=	liblz4.so:archivers/liblz4

USES=		gmake

USE_GITHUB=	yes
GH_ACCOUNT=	andikleen
GH_TAGNAME=	1a8dbfc

PLIST_FILES=	bin/lz4jsoncat

do-build:
	cd ${WRKSRC} && ${GMAKE}

do-install:
	${INSTALL_PROGRAM} ${WRKSRC}/lz4jsoncat ${STAGEDIR}${PREFIX}/bin/lz4jsoncat

.include <bsd.port.mk>
